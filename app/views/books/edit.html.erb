<h1>Editing Book</h1>
<!-- form_with部分 -->
<%= form_with model:@book, local: true do |f| %>
  <% if @book.errors.any? %>
        <h3>入力した内容にエラーが<%= @book.errors.count %>件あります</h3>
          <ul style="color: red">
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
  <% end %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_field :body %>
  <h4><%= f.submit 'Update Book' %></h4>
  <%= link_to 'Show', book_path %>
  <%= link_to 'Back', books_path %>
<% end %>
