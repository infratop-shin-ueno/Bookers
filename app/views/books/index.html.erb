<%= flash[:notice] %>
    <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Show",book_path(book) %></td>
            <td><%= link_to "Edit", edit_book_path(book)%></td>
            <td><%= link_to "Destroy", book_path(book),method: :delete, data: { confirm: 'Are you sureï¼Ÿ' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <h2>New Book</h2>
    <% if @book2 %>
      <% if @book2.errors.any? %>
      <div>
        <h3><%= @book2.errors.count %>errors prohibited this book from being saved:</h3>
        <ul style="color: red">
          <% @book2.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
    <% end %>

    <%= form_with model: @book, local:true do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Body</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create Books' %>
    <% end %>
